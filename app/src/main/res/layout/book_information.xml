<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/iconLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSearchBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewBookName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="The Lords of the rings trilogy "
                        android:textColor="#6D77FA" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/outline_share_lavander_24" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/round_hearth_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBarBook"
                        android:layout_width="239dp"
                        android:layout_height="45dp"
                        android:contentDescription="@string/rating_bar_description" />

                    <TextView
                        android:id="@+id/textViewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0 (123)" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageViewBook"
                    android:layout_width="match_parent"
                    android:layout_height="137dp"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/textViewDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrizione" />

                <TextView
                    android:id="@+id/textViewMainDescription"
                    android:layout_width="393dp"
                    android:layout_height="52dp"
                    android:text="The Lord of the Rings is the saga of a group of sometimes reluctant heroes who set forth to save their world from consummate evil...." />

                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewMoreDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Leggi di piÃ¹"
                        android:textColor="#6D77FA" />

                    <ImageView
                        android:id="@+id/buttonMoreDescription"
                        android:layout_width="24dp"
                        android:layout_height="20dp"
                        android:rotationY="180"
                        app:srcCompat="@drawable/baseline_arrow_back_24" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="223dp"
                        android:layout_height="match_parent" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textViewNomeBiblioteca"
                            android:layout_width="match_parent"
                            android:layout_height="43dp"
                            android:layout_margin="10dp"
                            android:text="Biblioteca univpm"
                            android:textColor="#FB0707" />

                        <TextView
                            android:id="@+id/textViewDataRiconsegna"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Da riconsegnare entro il GG/MM/YY" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:text="Prenota prestito"
                            app:cornerRadius="40dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/prova"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Dettagli sulla valutazione"
                    android:textAlignment="center"
                    android:textColor="#6D77FA" />

                <TextView
                    android:id="@+id/dettaglio_recensioni"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="4,5 su 5  30.987 recensioni"
                    android:textAlignment="center"
                    android:textColor="#A9A9A9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/ratingBar_5stella"
                        android:layout_width="239dp"
                        android:layout_height="45dp"
                        android:contentDescription="@string/rating_bar_description" />

                    <ProgressBar
                        android:id="@+id/progressBar5"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView_inforatingbar_5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="TextView" />

                    <item
                        android:id="@+id/notifyIcon"
                        android:layout_width="57dp"
                        android:layout_height="match_parent"
                        android:icon="@drawable/baseline_notifications_24"
                        android:title="Home" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratingBar_4stella"
                        android:layout_width="239dp"
                        android:layout_height="45dp"
                        android:contentDescription="@string/rating_bar_description" />

                    <ProgressBar
                        android:id="@+id/progressBar4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView_inforatingbar_4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="TextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratingBar_3stella"
                        android:layout_width="239dp"
                        android:layout_height="45dp"
                        android:contentDescription="@string/rating_bar_description" />

                    <ProgressBar
                        android:id="@+id/progressBar3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView_inforatingbar_3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="TextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratingBar_2stella"
                        android:layout_width="239dp"
                        android:layout_height="45dp"
                        android:contentDescription="@string/rating_bar_description" />

                    <ProgressBar
                        android:id="@+id/progressBar2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView_inforatingbar_2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="TextView" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratingBar_1stella"
                        android:layout_width="239dp"
                        android:layout_height="45dp"
                        android:contentDescription="@string/rating_bar_description" />

                    <ProgressBar
                        android:id="@+id/progressBar1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="103dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/textView_inforatingbar_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="TextView" />

                </LinearLayout>

                <Button
                    android:layout_margin="10dp"
                    android:id="@+id/buttonScriviRecensione"
                    android:layout_width="323dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:endColor = "@color/grey"
                    android:textColor="@color/black"
                    android:text="Scrivi una recensione"
                    />
                <View style="@style/Divider" />


                <TextView
                    android:id="@+id/textView_title_recensioni"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Recensioni"
                    android:textColor="#6D77FA"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayoutSearchBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/search_layout"
        android:orientation="horizontal"
        android:paddingLeft="11dp"
        android:paddingTop="20dp"
        android:paddingRight="11dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <ImageView
            android:id="@+id/arrowIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_arrow_back_24" />

        <EditText
            android:id="@+id/EditTextSearch"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/search_bar"
            android:hint="Search"
            android:padding="8dp"
            android:paddingLeft="20dp"
            android:paddingTop="17.5dp"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/baseline_search_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/iconLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_layout"
        android:divider="@drawable/empty_divider_width"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="11dp"
        android:paddingTop="20dp"
        android:paddingRight="11dp"
        android:paddingBottom="20dp"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSearchBar"
        app:layout_constraintVertical_bias="1.0">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:itemHorizontalTranslationEnabled="false"
            app:menu="@menu/bottom_navigation_menu">

        </com.google.android.material.bottomnavigation.BottomNavigationView>

    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>