<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutSearchBar"
        android:layout_width="387dp"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:background="@drawable/search_layout"
        android:paddingLeft="11dp"
        android:paddingTop="20dp"
        android:paddingRight="11dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextSearch"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:background="@drawable/search_bar"
        android:hint="Search"
        android:padding="8dp"
        android:paddingLeft="20dp"
        android:paddingTop="17.5dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutSearchBar"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutSearchBar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/EditTextSearch"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="406dp"
        android:layout_height="60dp"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="4dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutSearchBar"
        app:layout_constraintVertical_bias="0.964">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/home"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/EditTextSearch"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/bookIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/book"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/EditTextSearch"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/notifyIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/notifications"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/EditTextSearch"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/settings"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/EditTextSearch"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/profile"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/EditTextSearch"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>


</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>