<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayoutHomePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/linearLayoutSearchBar"
        android:layout_width="387dp"
        android:layout_height="78dp"
        android:orientation="horizontal"
        android:background="@drawable/search_layout"
        android:paddingLeft="11dp"
        android:paddingTop="20dp"
        android:paddingRight="11dp"
        android:paddingBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditTextSearch"
        android:layout_width="300dp"
        android:layout_height="43dp"
        android:background="@drawable/search_bar"
        android:hint="Search"
        android:padding="8dp"
        android:paddingLeft="20dp"
        android:paddingTop="17.5dp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutSearchBar"
        app:layout_constraintStart_toStartOf="@+id/linearLayoutSearchBar"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutHomePage" />

    <ImageView
        android:id="@+id/searchIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayoutSearchBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/EditTextSearch"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutHomePage" />



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>